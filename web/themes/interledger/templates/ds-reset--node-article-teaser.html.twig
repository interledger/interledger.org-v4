{% set nodeLink = path('entity.node.canonical', {'node': node.id}) %}

{{ content.field_article_thumbnail }}
<div class="article-teaser-text">
  <h2><a href="{{ nodeLink }}" data-umami-event="Blog - {{ node.created.0.value|date('Y-m-d') }} (title)">{{ node.title.0.value|raw }}</a></h2>
  <time datetime="{{ node.created.0.value|date('Y-m-d') }}">{{ node.created.0.value|format_date('custom', 'd M Y') }}</time>
  <p>{{ node.body.0.summary|raw }}</p>
  <a href="{{ nodeLink}}" data-umami-event="Blog - {{ node.created.0.value|date('Y-m-d') }} (read more)">{{ 'Read more'|t }}</a>
</div>
