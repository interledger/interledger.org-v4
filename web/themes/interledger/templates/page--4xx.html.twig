{% if logged_in %}
  {{ page.admin }}
  {% endif %}

<header class="site-header" role="banner">
  {{ page.header }}
</header>

<main role="main">
  <a id="main-content" tabindex="-1"></a>
  <div class="error-block">
    <h1>{{ error_code }}</h1>
    <p>
      {%  if error_code == "404" %}
      {{ "Oh dear, we can't find the page you're looking for."|t }}
      {% endif %}
      {% if error_code == "403" %}
      {{ "Unfortunately, you are not authorized to view this page. Try logging in first."|t }}
      {% endif %}
    </p>
    <section class="cta--btn">
      <div class="content-wrapper">
        <a class="cta--btn__link" href="/" data-umami-event="4xx page link - Home">
          {{ 'Back to Home'|t }}
        </a>
      </div>
    </section> 
  </div>
</main>

