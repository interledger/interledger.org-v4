# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
BACKUP_BUCKET=your-backup-bucket

# Staging Environment
DB_NAME_STAGING=staging_db
STORAGE_BUCKET_STAGING=staging-files-bucket
# CLOUDSQL_INSTANCE should be just the instance name, NOT the full connection string
# Example: "my-instance" not "project:region:my-instance"
CLOUDSQL_INSTANCE_STAGING=staging-instance

# Production Environment
DB_NAME_PRODUCTION=production_db
STORAGE_BUCKET_PRODUCTION=production-files-bucket
# CLOUDSQL_INSTANCE should be just the instance name, NOT the full connection string
# Example: "my-instance" not "project:region:my-instance"
CLOUDSQL_INSTANCE_PRODUCTION=production-instance
