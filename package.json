{
  "name": "interledger.org",
  "version": "1.0.0",
  "description": "Interledger.org Drupal website",
  "private": true,
  "scripts": {
    "format": "biome check --write . && biome format --write . && prettier --write '**/*.{md,mdx}' && eslint . --fix",
    "lint": "biome check . && prettier --check '**/*.{md,mdx}' && eslint .",
    "lint:js": "eslint web/themes/**/*.js web/modules/custom/**/*.js",
    "lint:js:fix": "eslint web/themes/**/*.js web/modules/custom/**/*.js --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-yml": "^1.10.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0"
  }
}
