{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "none",
      "jsxQuoteStyle": "double"
    }
  },
  "files": {
    "includes": [
      "**/*.{js,jsx,ts,tsx,json}",
      "!**/node_modules",
      "!**/vendor",
      "!**/web/core",
      "!**/web/modules/contrib",
      "!**/web/themes/contrib",
      "!**/web/profiles/contrib",
      "!**/*.min.js",
      "!**/*.bundle.js",
      "!pnpm-lock.yaml"
    ]
  }
}
